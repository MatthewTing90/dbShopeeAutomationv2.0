
@{
    ViewBag.Title = "Import NTL Asia Excel Form";
    Layout = "~/Views/Shared/_ProductionLayout.cshtml";
}

<div class="d-flex align-items-center justify-content-center">
    <div class="p-3" style="width: 800px;">
        <div class="border border-dark">
            <div class="row">
                <div class="col">
                    <div class="bg-dark text-center h1 text-white">@ViewBag.Title</div>
                </div>
            </div>

            @using (Html.BeginForm("uploadFile", "ProductExcel", FormMethod.Post, new { enctype = "multipart/form-data", @Id = "uploadFileForm" }))
            {
                <div class="form-group row px-3">
                    <label for="fileUpload" class="col-2 col-form-label">Excel File</label>
                    <div class="col-4">
                        <input type="file" class="form-control" name="fileUpload" placeholder="Submit File Here" required />
                    </div>
                </div>

                <div class="my-2"></div>

                <div class="row px-3">
                    <div class="col">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>
            }

            <div class="h2 px-3" id="resp"></div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(function () {
        let form = $("form[id='uploadFileForm']");
        const actionLink = form.attr("action");
        const methodType = form.attr("method");

        form.submit(e => {
            e.preventDefault();

            let fData = new FormData(form[0]);

            $.ajax({
                url: actionLink,
                type: methodType,
                enctype: 'multipart/form-data',
                processData: false,  // Important!
                contentType: false,
                cache: false,
                data: fData,
                success: resp => {
                    $("#resp").html(resp);
                }
            });
        })
    });
</script>

