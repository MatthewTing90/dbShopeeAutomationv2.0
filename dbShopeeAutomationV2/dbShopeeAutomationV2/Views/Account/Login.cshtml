@model dbShopeeAutomationV2.Models.TShopeeUser

@{
    ViewBag.Title = "Login page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    img {
        display: block;
        margin-left: auto;
        margin-right: auto;
    }
</style>

@using (Html.BeginForm("Login", "Account", new { returnUrl = Request.QueryString["ReturnUrl"] }, FormMethod.Post))
{
    @Html.AntiForgeryToken()

    @Html.HiddenFor(model => model.email, new { @Value = "trash@gmail.com" })

    <div class="d-flex align-items-center justify-content-center mt-3">
        <div>
            <div style="width: 100%">
                <img src="~/Content/Images/Logo.jpg" style="height: 200px; width: 200px;" alt="VMS Portal Login Logo Image" />
            </div>
            <div class="border border-dark p-3" style="height: 100%; width: 600px;">
                <div class="h4">
                    VMS Portal login
                </div>
                <div class="row mt-2">
                    <div class="col-3">
                        <label for="username" class="col-form-label">Username</label>
                    </div>
                    <div class="col-9">
                        @Html.TextBoxFor(model => model.username, new { @Class = "form-control", @Type = "text", @Required = "true" })
                    </div>
                </div>
                <div class="row mt-2">
                    <div class="col-3">
                        <label for="password" class="col-form-label">Password</label>
                    </div>
                    <div class="col-9">
                        @Html.TextBoxFor(model => model.password, new { @Class = "form-control", @Type = "password", @Required = "true" })
                    </div>
                </div>
                <div class="text-danger">@ViewData["login_error"]</div>
                <div class="row mt-2">
                    <div class="col-2">
                        <button class="btn btn-dark">Login</button>
                    </div>
                    <div class="col-4">
                        <button class="btn btn-dark">Forgot Password</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
}
