@model dbShopeeAutomationV2.Models.TShopeeProduction

@{
    ViewBag.Title = "Production Creation Form";
    Layout = "~/Views/Shared/_NavLayout.cshtml";
}

@section tmp_script {
    <script type="text/javascript">$(".nav-item:nth-child(2)").children().addClass("active")</script>
}

<div class="my-3"></div>

<div class="container">

    <div class="border border-dark">
        <div class="row">
            <div class="col">
                <div class="bg-dark text-center h1 text-white">@ViewBag.Title</div>
            </div>
        </div>

        <div class="row">
            <div class="col px-4 py-2">
                @using (Html.BeginForm("Create", "Production", FormMethod.Post, new { id = "createProduction" }))
                {
                    @Html.HiddenFor(model => model.status, new { @Value = "Incomplete" })

                    @Html.HiddenFor(model => model.production_id)

                    <div class="form-group">
                        <label class="h4">Title</label>
                        @Html.TextBoxFor(model => model.title, new { @class = "form-control", @placeholder = "Insert Title Here..." })
                    </div>

                    <div class="my-3"></div>

                    <div class="form-group">
                        <label class="h4">Description</label>
                        @Html.TextAreaFor(model => model.description, new { @class = "form-control", @placeholder = "Insert Description Here..." })
                    </div>
                
                    <div class="my-3"></div>
                
                    <input type="submit" class="btn btn-danger" value="Next Page" form="createProduction" />
                }
            </div>
        </div>
    </div>
</div>
