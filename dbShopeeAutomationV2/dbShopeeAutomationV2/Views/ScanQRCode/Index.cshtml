
@{
    ViewBag.Title = "Scan QRCode";
    Layout = "~/Views/Shared/_QRCodeLayout.cshtml";
}

<style>
    .img{
        width: 200px;
        height: 200px;
    }
</style>

<div class="d-flex align-items-center justify-content-center">
    <div class="p-3">
        <div class="border border-dark">
            <div class="container">
                <div class="row">
                    <div class="bg-dark text-center h1" style="color: white;">@ViewBag.Title</div>
                </div>
                <div class="text-center">
                    <img src="~/Content/Images/barcode_scan.gif" alt="Barcode Scanner" />
                </div>
                @using (Html.BeginForm("SubmitCode", "ScanQRCode", FormMethod.Post, new { @Id = "QRCodeForm" }))
                {
                    <div class="row p-3">
                        <div class="col-8">
                            <input type="text" placeholder="Insert Invoice Code" class="form-control" name="invoice_title" />
                        </div>
                        <div class="col-4 px-3">
                            <input type="submit" class="btn btn-success" value="Submit QRCode" />
                        </div>
                    </div>
                }
                <div class="text-center h4" id="resp_msg"></div>
            </div>
        </div>
    </div>
</div>

<script type="text/javascript">
    $(function () {
        $("form[id='QRCodeForm']").submit(e => {
            e.preventDefault();

            let qrCodeForm = $("form[id='QRCodeForm']");
            const qrCodeForm_actionLink = qrCodeForm.attr("action");
            const qrCodeForm_methodType = qrCodeForm.attr("method");

            console.log(qrCodeForm.serialize());

            $.ajax({
                url: qrCodeForm_actionLink,
                type: qrCodeForm_methodType,
                data: qrCodeForm.serialize(),
                success: resp => {
                    $("#resp_msg").html(resp);
                },
                error: resp => {
                    $("#resp_msg").html(resp);
                }
            });
        });
    });
</script>

